<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/vgParentLayout"
    android:clickable="true"
    android:layout_gravity="center"
    android:padding="@dimen/spacing_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgState"
            android:layout_width="@dimen/spacing_100"
            android:layout_height="@dimen/spacing_100"
            android:src="@drawable/navigation_error"/>
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/spacing_8"
            android:text="@string/txt_no_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="?colorAccent"/>
        <Button
            android:id="@+id/btnRunnable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="?colorPrimary"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingBottom="@dimen/spacing_5"
            android:paddingLeft="@dimen/spacing_12"
            android:paddingRight="@dimen/spacing_12"
            android:paddingTop="@dimen/spacing_5"
            android:text="@string/txt_retry"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/pbProgress"
        android:layout_width="@dimen/spacing_80"
        android:layout_height="@dimen/spacing_80"
        android:layout_gravity="center"
        wheel:matProg_progressIndeterminate="true"
        />
</FrameLayout>